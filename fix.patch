 </table>
+
+<!-- === 모바일 카드 스타일 & 스크립트(menu2) === -->
+<style>
+@media (max-width: 768px){
+    /* 1) 테이블 → 카드 전환 */
+    .mobile-card thead{display:none;}
+    .mobile-card tbody tr{
+        display:block;
+        border:1px solid #ddd;
+        border-radius:8px;
+        margin-bottom:1rem;
+        padding:1rem;
+        box-shadow:0 2px 5px rgba(0,0,0,.1);
+    }
+    .mobile-card tbody td{
+        display:flex;
+        justify-content:space-between;
+        align-items:center;
+        padding:.5rem 0;
+        border-bottom:1px solid #eee;
+    }
+    .mobile-card tbody td:last-child{border-bottom:none;}
+
+    /* 2) data-label(헤더 텍스트) 표시 */
+    .mobile-card tbody td::before{
+        content:attr(data-label);
+        font-weight:bold;
+        color:#555;
+        margin-right:1rem;
+        flex-shrink:0;
+    }
+
+    /* 3) 문서명: 라벨 제거 + 중앙정렬 */
+    .mobile-card tbody td[data-label="문서명"]{
+        display:block !important;
+        width:100% !important;
+        text-align:center !important;
+        font-weight:bold;
+        color:#007bff;
+    }
+    .mobile-card tbody td[data-label="문서명"]::before{display:none !important;}
+
+    /* 4) 필요 없는 컬럼 모바일에서 숨김 (번호, 기안일자, 기안부서 등) */
+    .mobile-card tbody td:nth-child(1),  /* 번호 */
+    .mobile-card tbody td:nth-child(2),  /* 기안일자 */
+    .mobile-card tbody td:nth-child(3)   /* 부서/현장 */
+    {display:none;}
+}
+</style>
+
+<script>
+$(function(){
+    // 1) 테이블 헤더 텍스트를 각 td의 data-label 속성에 매핑
+    $('.mobile-card').each(function(){
+        var headers=[];
+        $(this).find('thead th').each(function(){headers.push($(this).text().trim());});
+        $(this).find('tbody tr').each(function(){
+            $(this).find('td').each(function(i){
+                $(this).attr('data-label',headers[i]);
+            });
+        });
+    });
+
+    // 2) 모바일(≤768px)에서 카드 헤더(번호·부서) 생성 및 필요컬럼 제거
+    if($(window).width()<=768){
+        $('.mobile-card tbody tr').each(function(){
+            var $tds=$(this).find('td');
+            var num=$tds.eq(0).text().trim();
+            var team=$tds.eq(2).text().trim();
+            var header="["+num+"] "+team;
+            $('<div class="mobile-card-header"/>').text(header).prependTo($(this));
+            $tds.eq(0).hide(); // 번호
+            $tds.eq(1).hide(); // 기안일자
+            $tds.eq(2).hide(); // 부서/현장
+        });
+    }
+});
+</script>
